<?xml version="1.0"?>
<robot name="r2d2">
<material name ='blue'>
   <color rgba='0 0 1 1'/>
</material>

<link name="base_link">
<visual>
<geometry>
<cylinder radius ='0.2'  length='0.6'/>
</geometry>
<origin rpy ='0 0 0' xyz='0 0 0'/>
<material name ='blue'/></visual>
</link>

<material name ='red'>
   <color rgba='1 0 0 1'/>
</material>

<link name="right_leg">
<visual>
<geometry>
<box size ="0.6 0.1 0.2"/>
</geometry>
<origin rpy ='0 1.57075 0' xyz='0 0 -0.3'/>
<material name ='red'/></visual>
</link>

<material name ='red'>
   <color rgba='1 0 0 1'/>
</material>

<link name="left_leg">
<visual>
<geometry>
<box size ="0.6 0.1 0.2"/>
</geometry>
<origin rpy ='0 1.57075 0' xyz='0 0 -0.3'/>
<material name ='red'/></visual>
</link>

<joint name="base_to_right_leg" type="fixed">
<parent link="base_link"/>
<child link="right_leg"/>
<origin xyz="0 -0.22 0.25"/>
</joint>
<joint name="base_to_left_leg" type="fixed">
<parent link="base_link"/>
<child link="left_leg"/>
<origin xyz="0 0.22 0.25"/>
</joint>
</robot>
